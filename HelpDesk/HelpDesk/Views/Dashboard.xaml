<Window x:Class="HelpDesk.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpDesk.Views"
        mc:Ignorable="d"
        Title="Helpdesk System" Height="300" Width="1059.926">
    <Grid>

        <TabControl>
            <TabItem Header=" Data User ">
                <Grid Margin="10">
                    <DataGrid AutoGenerateColumns="False" Margin="0,0,373,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header=" ID " Binding="{Binding}" Width="50"/>
                            <DataGridTextColumn Header=" First Name " Binding="{Binding}" Width="150" />
                            <DataGridTextColumn Header=" Last Name " Binding="{Binding}" Width="150"/>
                            <DataGridTextColumn Header=" City " Binding="{Binding}" Width="100"/>
                            <DataGridTextColumn Header=" Phone " Binding="{Binding}" Width="100"/>
                            <DataGridTextColumn Header=" Department " Binding="{Binding}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>



            </TabItem>
            <TabItem Header=" Data Department ">
                <Grid Margin="10">
                    <DataGrid  AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Department Name" Binding="{Binding Birthday}" />
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Details}" Margin="10" />
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>


                </Grid>
            </TabItem>
            <TabItem Header=" Data Category ">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*" />
                        <ColumnDefinition Width="493*"/>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="521*" />
                    </Grid.ColumnDefinitions>

                    <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" />

                </Grid>
            </TabItem>
            <TabItem Header=" Data Role " />
            <TabItem Header=" Data Type " />
            <TabItem Header=" Data Holiday " />
            <TabItem Header=" Data Ticket " />
            <Label x:Name="label" Content="Label" Height="100" Width="100"/>
        </TabControl>

    </Grid>
</Window>
